{
  // suggest
  "suggest.snippetIndicator": "🌟",
  "suggest.timeout": 5000,
  "suggest.detailField": "abbr",
  "suggest.maxCompleteItemCount": 50,
  "suggest.maxPreviewWidth": 80,
  "suggest.triggerAfterInsertEnter": false,
  "suggest.detailMaxLength": 30,
  "suggest.completionItemKindLabels": {
    "keyword": "",
    "variable": "",
    "value": "",
    "operator": "Ψ",
    "function": "ƒ",
    "reference": "渚",
    "constant": "",
    "method": "",
    "struct": "פּ",
    "class": "",
    "interface": "",
    "text": "",
    "enum": "",
    "enumMember": "",
    "module": "",
    "color": "",
    "property": "",
    "field": "料",
    "unit": "",
    "event": "鬒",
    "file": "",
    "folder": "",
    "snippet": "",
    "typeParameter": "",
    "default": ""
  },

  // diagnostic
  "diagnostic.errorSign": "😭",
  "diagnostic.warningSign": "👻",

  // python
  "python.sortImports.args": ["-sl"],
  "python.formatting.autopep8Args": ["--ignore=E402, E501"],

  // javascript
  "javascript.suggestionActions.enabled": false,

  // prettier
  "prettier.singleQuote": true,
  "prettier.eslintIntegration": true,

  // eslint
  "eslint.enable": false,
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": ["javascript", "typescript"],

  // preferences
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "json",
    "html",
    "rust"
  ],

  // git
  "git.enableGutters": true,
  "git.signOffset": 99,
  "git.addGBlameToVirtualText": false,
  "git.virtualTextPrefix": "     ",
  "git.branchCharacter": "",
  "git.addedSign.text": "▏",
  "git.changedSign.text": "▏",
  "git.removedSign.text": "▏",
  "git.topRemovedSign.text": "‾",
  "git.changeRemovedSign.text": "≃",
  "git.addedSign.hlGroup": "GitAddHi",
  "git.changedSign.hlGroup": "GitModifyHi",
  "git.removedSign.hlGroup": "GitDeleteHi",
  "git.topRemovedSign.hlGroup": "GitDeleteHi",
  "git.changeRemovedSign.hlGroup": "GitDeleteHi",

  // languageservers
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  }
}
